{
  "name": "ts_template",
  "version": "0.1.0",
  "description": "A production-ready TypeScript project template with modern tooling, testing, and CI/CD",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ts-template": "dist/cli.js",
    "template-cli": "dist/cli.js"
  },
  "scripts": {
    "dev": "tsx watch src/cli.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/cli.js",
    "cli": "tsx src/cli.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint --fix",
    "lint:nofix": "eslint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "npm run type-check && npm run format && npm run lint",
    "clean": "rm -rf dist node_modules coverage .cache",
    "docs:generate": "typedoc --out docs/api src",
    "docs:serve": "npx serve docs/api",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "template",
    "typescript",
    "cli",
    "boilerplate",
    "starter"
  ],
  "author": "Wei Lee <mai@mai0313.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Mai0313/ts_template.git"
  },
  "bugs": {
    "url": "https://github.com/Mai0313/ts_template/issues"
  },
  "homepage": "https://github.com/Mai0313/ts_template#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.9",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.25.1",
    "@types/node": "^24.0.1",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "@vitest/coverage-v8": "^3.1.5",
    "@vitest/ui": "^3.1.5",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^16.0.0",
    "prettier": "^3.5.3",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.22.5",
    "typedoc": "^0.27.11",
    "typedoc-plugin-markdown": "^4.4.0",
    "typescript": "^5.6.3",
    "vitest": "^3.1.5"
  },
  "prettier": {
    "printWidth": 99,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "jsxSingleQuote": false,
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "always",
    "endOfLine": "lf",
    "quoteProps": "consistent",
    "proseWrap": "preserve"
  }
}

